<?xml version="1.0"?>
<!--
Multi-sensor fusion synchronization launch file.

Demonstrates synchronization of multiple sensor modalities with
different update rates (camera 30Hz, LiDAR 10Hz, IMU 100Hz).

Usage:
    ros2 launch conflux multi_sensor_fusion.launch.xml

Scenario:
    - Camera at 30Hz (visual features)
    - LiDAR at 10Hz (3D point cloud)
    - IMU at 100Hz (motion estimation)
    - 100ms window accommodates LiDAR's slower rate
-->
<launch>
  <!-- Arguments -->
  <arg name="log_level" default="info"
       description="Logging level"/>

  <!-- Config file path -->
  <let name="config_file"
       value="$(find-pkg-share conflux)/config/examples/multi_sensor_fusion.yaml"/>

  <!-- conflux node -->
  <node pkg="conflux" exec="conflux" name="conflux_fusion" output="screen"
        args="--ros-args --log-level $(var log_level)">
    <param name="config_file" value="$(var config_file)"/>
  </node>
</launch>
