<?xml version="1.0"?>
<!--
Basic launch file for the conflux node.

Usage:
    ros2 launch conflux conflux.launch.xml config:=/path/to/config.yaml

Arguments:
    config: Path to the YAML configuration file (default: example.yaml)
    log_level: Logging level (default: info)
-->
<launch>
  <!-- Arguments -->
  <arg name="config" default="$(find-pkg-share conflux)/config/example.yaml"
       description="Path to the conflux configuration file"/>
  <arg name="log_level" default="info"
       description="Logging level (trace, debug, info, warn, error)"/>

  <!-- conflux node -->
  <node pkg="conflux" exec="conflux" name="conflux" output="screen"
        args="--ros-args --log-level $(var log_level)">
    <param name="config_file" value="$(var config)"/>
  </node>
</launch>
