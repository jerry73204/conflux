<?xml version="1.0"?>
<!--
Stereo camera synchronization launch file.

Demonstrates tight synchronization of stereo camera pairs for
depth estimation. Uses a very small window (5ms) to ensure
left and right frames are captured at the same instant.

Usage:
    ros2 launch conflux stereo_camera.launch.xml

Scenario:
    - Left camera at 30Hz
    - Right camera at 30Hz
    - CameraInfo for calibration data
    - 5ms window for precise frame pairing
-->
<launch>
  <!-- Arguments -->
  <arg name="log_level" default="info"
       description="Logging level"/>

  <!-- Config file path -->
  <let name="config_file"
       value="$(find-pkg-share conflux)/config/examples/stereo_camera.yaml"/>

  <!-- conflux node -->
  <node pkg="conflux" exec="conflux" name="conflux_stereo" output="screen"
        args="--ros-args --log-level $(var log_level)">
    <param name="config_file" value="$(var config_file)"/>
  </node>
</launch>
