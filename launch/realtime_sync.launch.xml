<?xml version="1.0"?>
<!--
Real-time synchronization example launch file.

Demonstrates camera + LiDAR synchronization with latency constraints.
This scenario prioritizes bounded latency over perfect matching.

Usage:
    ros2 launch msync realtime_sync.launch.xml

Scenario:
    - Camera at 30Hz, LiDAR at 10Hz
    - 33ms synchronization window
    - Best-effort QoS for minimal latency
    - Aggressive staleness detection
-->
<launch>
  <!-- Arguments -->
  <arg name="log_level" default="info"
       description="Logging level"/>

  <!-- Config file path -->
  <let name="config_file"
       value="$(find-pkg-share msync)/config/examples/realtime_camera_lidar.yaml"/>

  <!-- msync node -->
  <node pkg="msync" exec="msync" name="msync_realtime" output="screen"
        args="--ros-args --log-level $(var log_level)">
    <param name="config_file" value="$(var config_file)"/>
  </node>
</launch>
